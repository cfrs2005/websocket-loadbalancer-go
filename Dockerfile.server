# WebSocket服务器Dockerfile
FROM golang:1.21-alpine AS builder

WORKDIR /app

# 复制Go模块文件
COPY go.mod go.sum ./
RUN go mod download

# 复制源代码
COPY . .

# 构建应用
RUN CGO_ENABLED=0 GOOS=linux go build -o websocket-server .

# 运行阶段
FROM alpine:latest

RUN apk --no-cache add ca-certificates
WORKDIR /root/

# 复制可执行文件
COPY --from=builder /app/websocket-server .

# 暴露端口（在docker-compose中覆盖）
EXPOSE 8081

# 运行应用
CMD ["./websocket-server", "-mode=single", "-port=${PORT}", "-node=${NODE_ID}"]
